{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@next/next/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
    },
    "globals": {
        "process": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": [
                "next.config.js",
                "postcss.config.js",
                "tailwind.config.js"
            ],
            "globals": {
                "require": true,
                "module": true
            }
        },
        {
            "files": "src/public/js/ga.js",
            "globals": {
                "dataLayer": true
            }
        },
        {
            "files": "**/icon.js",
            "rules": {
                "@next/next/no-img-element": "off"
            }
        }
    ]
}